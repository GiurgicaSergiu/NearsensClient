<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:id="@+id/llInfoWindow"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bk_infowindow_marker" >

       

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            
                android:paddingRight="12dp"
            android:background="@drawable/bk_ll_infowindow_marker"
            android:orientation="vertical" >

            <com.ariisens.nearsens.customview.MyTextView
                android:id="@+id/txtPlaceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:padding="5dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="1dp"
            
             android:paddingRight="10dp"
            android:layout_below="@+id/linearLayout1"
            android:background="@drawable/bk_ll2_infowindow_marker"
            android:orientation="vertical" >

               <com.ariisens.nearsens.customview.MyTextView
                   android:id="@+id/txtTitle"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="80dp"
                   android:paddingLeft="5dp"
                   android:paddingTop="1dp"
                   android:singleLine="true"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:textColor="#fff" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" >
                    <com.ariisens.nearsens.customview.MyTextView
                        android:layout_marginLeft="80dp"
                            android:id="@+id/txtPrezzo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"                            
                            android:textColor="#fff"
                           android:paddingLeft="5dp"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <com.ariisens.nearsens.customview.MyTextView
                            android:id="@+id/txtSconto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             android:layout_marginLeft="5dp"
                             android:textColor="#fff"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
               </LinearLayout>

        </LinearLayout>
        
         <ImageView
            android:id="@+id/marker_icon"
            android:layout_width="72dp"
            android:layout_margin="3dp"
            android:layout_height="62dp"
            android:background="@drawable/bk_img_marker"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/carne" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/arrow" />

    </LinearLayout>

</LinearLayout>
